<idea-plugin url="https://github.com/eleven26/tw-tools">
    <id>com.baiguiren.tools</id>
    <name>tw tools</name>
    <version>1.4.10</version>
    <vendor email="rubymay21s@gmail.com" url="https://github.com/eleven26">eleven26</vendor>

    <description><![CDATA[
    <h1>tw-tools</h1>
    <br/>

    <h2>What can tw tools do</h2>
    <ul>
        <li>Switch Laravel env file (Tools -> "Switch Env")</li>
        <li>Switch all module's current branch (Tools -> "Switch Branch")</li>
        <li>Jump to docs page by select api uri</li>
        <li>Stash all repositories, stash pop all repositories (Tools -> "Stash Helper")</li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
    <ul>
        <li>Add menu to switch to branch</li>
        <li>Add menu to switch env file</li>
        <li>Add menu to stash/stash pop all repositories</li>
        <li>Add new version support</li>
    </ul>
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="173.4127"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    -->
    <depends>com.intellij.modules.lang</depends>
    <depends>Git4Idea</depends>

    <application-components>
    </application-components>

    <project-components>
    </project-components>

    <actions>
        <group id="Stash Helper" text="Stash Helper" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action class="com.baiguiren.tools.stash.Stash" id="stash all" text="Stash All" description="Stash all repos"/>
            <action class="com.baiguiren.tools.stash.StashPop" id="stash pop all" text="Stash Pop All" description="Stash pop all repos"/>
        </group>
        <group id="Switch Branch" text="Switch Branch" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action class="com.baiguiren.tools.branch.Qa1" id="branch_qa1" text="qa1" description="Switch branch to qa1"/>
            <action class="com.baiguiren.tools.branch.Qa2" id="branch_qa2" text="qa2" description="Switch branch to qa2"/>
            <action class="com.baiguiren.tools.branch.Qa3" id="branch_qa3" text="qa3" description="Switch branch to qa3"/>
            <action class="com.baiguiren.tools.branch.V127" id="branch_v127" text="v127" description="Switch branch to v127"/>
            <action class="com.baiguiren.tools.branch.V1271" id="branch_v1271" text="v1271" description="Switch branch to v1271"/>
            <action class="com.baiguiren.tools.branch.V1272" id="branch_v1272" text="v1272" description="Switch branch to v1272"/>
            <action class="com.baiguiren.tools.branch.V128" id="branch_v128" text="v128" description="Switch branch to v128"/>
            <action class="com.baiguiren.tools.branch.Release" id="branch_release" text="release" description="Switch branch to release"/>
            <action class="com.baiguiren.tools.branch.Master" id="branch_master" text="master" description="Switch branch to master"/>
        </group>
        <group id="Switch Env" text="Switch Env" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action class="com.baiguiren.tools.env.Qa1" id="qa1" text="qa1" description="Switch env to qa1"/>
            <action class="com.baiguiren.tools.env.Qa2" id="qa2" text="qa2" description="Switch env to qa2"/>
            <action class="com.baiguiren.tools.env.Qa3" id="qa3" text="qa3" description="Switch env to qa3"/>
            <action class="com.baiguiren.tools.env.Demo" id="demo" text="demo" description="Switch env to demo"/>
        </group>
        <group id="Api Blame" text="Api Blame" description="Api blame" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <action class="com.baiguiren.tools.api.blame.Get" id="api.blame.get" text="GET" description="Open docs url in browser (GET method)"/>
            <action class="com.baiguiren.tools.api.blame.Post" id="api.blame.post" text="POST" description="Open docs url in browser (POST method)"/>
            <action class="com.baiguiren.tools.api.blame.Put" id="api.blame.put" text="PUT" description="Open docs url in browser (PUT method)"/>
            <action class="com.baiguiren.tools.api.blame.Patch" id="api.blame.patch" text="PATCH" description="Open docs url in browser (PATCH method)"/>
            <action class="com.baiguiren.tools.api.blame.Delete" id="api.blame.delete" text="DELETE" description="Open docs url in browser (DELETE method)"/>
        </group>
    </actions>

</idea-plugin>