<idea-plugin url="https://github.com/eleven26/tw-tools">
    <id>com.baiguiren.tools</id>
    <name>tw tools</name>
    <version>2.0.2</version>
    <vendor email="rubymay21s@gmail.com" url="https://github.com/eleven26">eleven26</vendor>

    <description><![CDATA[
    <h1>tw-tools</h1>
    <br/>

    <h2>What can tw tools do</h2>
    <ul>
        <li>Switch Laravel env file (Tools -> "Switch Env")</li>
        <li>Switch all module's current branch (Tools -> "Switch Branch")</li>
    </ul>

    <h2>Pytest support</h2>
    <ul>
        <li>Run folder with Pytest By right-click menu</li>
        <li>Run file with Pytest By right-click menu</li>
        <li>Run method with Pytest By right-click menu</li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
    <ul>
        <li>Add menu to switch to branch</li>
        <li>Add menu to switch env file</li>
        <li>Add pytest support</li>
    </ul>
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="183.2371"/>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    -->
    <depends>com.intellij.modules.lang</depends>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <application-components>
    </application-components>

    <project-components>
    </project-components>

    <actions>
        <group id="Stash Helper" text="Stash Helper" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action class="com.baiguiren.tools.stash.Stash" id="stash all" text="Stash All" description="Stash all repos"/>
            <action class="com.baiguiren.tools.stash.StashPop" id="stash pop all" text="Stash Pop All" description="Stash pop all repos"/>
        </group>
        <group id="Switch Branch" text="Switch Branch" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action class="com.baiguiren.tools.branch.Qa1" id="branch_qa1" text="qa/qa1" description="Switch branch to qa/qa1"/>
            <action class="com.baiguiren.tools.branch.Qa2" id="branch_qa2" text="qa/qa2" description="Switch branch to qa/qa2"/>
            <action class="com.baiguiren.tools.branch.Qa3" id="branch_qa3" text="qa/qa3" description="Switch branch to qa/qa3"/>
            <action class="com.baiguiren.tools.branch.V130" id="branch_v130" text="dev/v1.3.0" description="Switch branch to dev/v1.3.0"/>
            <action class="com.baiguiren.tools.branch.V131" id="branch_v131" text="dev/v1.3.1" description="Switch branch to dev/v1.3.1"/>
            <action class="com.baiguiren.tools.branch.V132" id="branch_v132" text="dev/v1.3.2" description="Switch branch to dev/v1.3.2"/>
            <action class="com.baiguiren.tools.branch.V133" id="branch_v133" text="dev/v1.3.3" description="Switch branch to dev/v1.3.3"/>
            <action class="com.baiguiren.tools.branch.V140" id="branch_v140" text="dev/v1.4.0" description="Switch branch to dev/v1.4.0"/>
            <action class="com.baiguiren.tools.branch.Release" id="branch_release" text="release" description="Switch branch to release"/>
            <action class="com.baiguiren.tools.branch.Master" id="branch_master" text="master" description="Switch branch to master"/>
        </group>
        <group id="Switch Env" text="Switch Env" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action class="com.baiguiren.tools.env.Qa1" id="qa1" text="qa1" description="Switch env to qa1"/>
            <action class="com.baiguiren.tools.env.Qa2" id="qa2" text="qa2" description="Switch env to qa2"/>
            <action class="com.baiguiren.tools.env.Qa3" id="qa3" text="qa3" description="Switch env to qa3"/>
            <action class="com.baiguiren.tools.env.Demo" id="demo" text="demo" description="Switch env to demo"/>
        </group>
        <group id="Pycharm" text="Pycharm Tools">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <action class="com.baiguiren.tools.runner.Pytest" icon="AllIcons.General.Run" popup="false" id="pytest" text="Run with Pytest" description="Run with pytest"/>
            <action class="com.baiguiren.tools.runner.PytestRunMethod" icon="AllIcons.General.Run" popup="false" id="pytest_run_method" text="Run with Pytest(Method)" description="Run with pytest(Method)"/>
            <action class="com.baiguiren.tools.docs.DocsAction" popup="false" id="open_docs" text="Open Docs" description="Open docs url in browser"/>
            <separator/>
        </group>
        <group id="Run Tests" text="Pycharm Tools">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="before" relative-to-action="CutCopyPasteGroup"/>
            <action class="com.baiguiren.tools.runner.Pytest" icon="AllIcons.General.Run" popup="false" id="project_pytest" text="Run with Pytest" description="Run with pytest"/>
            <separator/>
        </group>
    </actions>

</idea-plugin>